<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <project.kimora.sellerpintar.extensions.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Berikan penilaian"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#b5b5b5"/>

    <project.kimora.sellerpintar.extensions.MyTextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Berikan penilaian kepada "
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:max="5"
        android:min="1"
        android:rating="5"
        android:stepSize="1"
        android:isIndicator="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:progressTint="@android:color/holo_orange_light"
        android:secondaryProgressTint="@android:color/holo_orange_light"
        style="?android:attr/ratingBarStyle"/>

    <project.kimora.sellerpintar.extensions.MyTextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Sangat Bagus"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"/>

    <EditText
        android:id="@+id/et_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:background="@color/rating_desc_bg"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:lines="5"
        android:padding="12dp"
        android:layout_margin="15dp"
        tools:ignore="LabelFor"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:hint="Berikan Ulasanmu ..."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lain Kali"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#a8a8a8"/>

        <TextView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Ulasan"
            android:textSize="18dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#a8a8a8"/>

    </LinearLayout>

</LinearLayout>